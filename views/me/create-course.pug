extends ../layouts/main

block content
  style.
    .form-container {
      max-width: 900px;
      margin: 40px auto;
      background: #ffffff;
      border-radius: 12px;
      box-shadow: 0 6px 20px rgba(0, 123, 255, 0.15);
      padding: 30px;
      border: 1px solid rgba(0, 123, 255, 0.1);
    }
    .form-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }
    .form-group {
      flex: 1;
      min-width: 260px;
    }
    .form-group.full-width {
      flex: 0 0 100%;
    }
    .form-label {
      font-weight: 600;
      color: #1e40af;
      font-size: 0.9rem;
      margin-bottom: 8px;
      display: block;
    }
    .form-control, .form-select {
      width: 100%;
      border: 1px solid #d1d5db;
      border-radius: 8px;
      padding: 10px;
      font-size: 0.95rem;
      transition: all 0.2s ease;
    }
    .form-control:focus, .form-select:focus {
      border-color: #1e40af;
      box-shadow: 0 0 0 3px rgba(30, 64, 175, 0.15);
      outline: none;
    }
    textarea.form-control {
      resize: vertical;
    }
    .form-text {
      font-size: 0.85rem;
      color: #6b7280;
      margin-top: 4px;
    }
    .btn-primary {
      width: 100%;
      background: #1e40af;
      color: #ffffff;
      border: none;
      padding: 12px;
      font-weight: 600;
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    .btn-primary:hover {
      background: #1e3a8a;
      transform: translateY(-1px);
    }
    h2 {
      color: #1e40af;
      font-weight: 800;
      font-size: 1.75rem;
      text-align: center;
      margin-bottom: 30px;
    }
    @media (max-width: 600px) {
      .form-group {
        min-width: 100%;
      }
    }
  .form-container
    h2 Thêm khóa học mới
    form.form-grid(action='/course/store' method='post')
      .form-group
        label.form-label(for='courseTitle') Tên khóa học
        input#courseTitle.form-control(type='text' placeholder='Nhập tên khóa học' required='' name='name')
      .form-group
        label.form-label(for='courseDesc') Mô tả khóa học
        textarea#courseDesc.form-control(rows='3' placeholder='Nhập mô tả khóa học' required='' name='des')
      .form-group
        label.form-label(for='courseImage') Ảnh đại diện (URL)
        input#courseImage.form-control(type='text' placeholder='Dán link ảnh đại diện' required='' name='img')
      .form-group
        label.form-label(for='courseTeacher') Giảng viên phụ trách
        input#courseTeacher.form-control(type='text' placeholder='Nhập tên giảng viên' required='' name='teacher')
      .form-group
        label.form-label(for='courseLevel') Cấp độ khóa học
        select#courseLevel.form-select(required='' name='level')
          option(value='basic' selected='') Cơ bản
          option(value='advanced') Nâng cao
      .form-group
        label.form-label(for='coursePrice') Giá (VNĐ)
        input#coursePrice.form-control(type='number' placeholder='Nhập giá khóa học' min='0' value='0' name='value')
      .form-group.full-width
        label.form-label(for='whatYouWillLearn') Bạn sẽ học được gì?
        textarea#whatYouWillLearn.form-control(rows='4' placeholder='VD: Hiểu cấu trúc HTML\nBiết cách tạo giao diện với CSS\n...' name='learnd')
        .form-text Mỗi ý nên viết trên một dòng để dễ đọc.
      .form-group
        label.form-label(for='courseStatus') Trạng thái
        select#courseStatus.form-select(required='' name='status')
          option(value='open' selected='') Mở khóa học
          option(value='closed') Đóng khóa học
      .form-group.full-width
        button.btn.btn-primary(type='submit') Thêm khóa học