    max-width: 70%;
    border-radius: 10px;
    word-wrap: break-word;
    
  }
  /* User messages: align right, different background */
  #chat-messages p:not(:has(strong)) {
    background-color: #007bff;
    color: white;
    margin-left: auto;
    text-align: right;
  }
  /* AI messages: align left, different background */
  #chat-messages p:has(strong) {
    background-color: #f1f1f1;
    color: black;
    margin-right: auto;
    text-align: left;
  }
  #chat-input {
    display: flex;
    border-top: 1px solid #ccc;
  }
  #chat-input input {
    flex: 1;
    padding: 10px;
    border: none;
    outline: none;
  }
  #chat-input button {
    padding: 10px;
    background: #007bff;
    color: white;
    border: none;
    cursor: pointer;
  }
  #chatbox h4 {
    margin: 0;
    padding: 10px;
    background: #007bff;
    color: white;
    text-align: center;
  }

