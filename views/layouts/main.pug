    // ðŸŒŸ Chuyá»ƒn trang loading
    script.
      document.addEventListener('DOMContentLoaded', () => {
        const loader = document.getElementById('page-loading');

        // áº¨n loader khi trang táº£i xong
        window.addEventListener('load', () => {
          loader.classList.remove('active');
        });

        // Xá»­ lÃ½ click vÃ o link
        const links = document.querySelectorAll('a');
        links.forEach(link => {
          link.addEventListener('click', e => {
            const href = link.getAttribute('href');
            if (href && !href.startsWith('#') && !href.startsWith('javascript') && !link.hasAttribute('target')) {
              loader.classList.add('active');
            }
          });
        });

        

        // NgÄƒn loader hiá»ƒn thá»‹ khi nháº¥n back/forward
        window.addEventListener('popstate', () => {
          loader.classList.remove('active');
        });

        // áº¨n loader khi trang Ä‘Æ°á»£c táº£i láº¡i tá»« bá»™ nhá»› Ä‘á»‡m
        window.addEventListener('pageshow', (event) => {
          if (event.persisted) {
            loader.classList.remove('active');
          }
        });
      });